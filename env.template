# Cloudflare R2 Configuration
# Copy this file to .env.local and fill in your actual values

# R2 CDN URL (replace with your actual R2 bucket URL)
NEXT_PUBLIC_R2_BASE_URL=https://juewei-assets.r2.dev

# R2 Access Credentials (get from Cloudflare dashboard)
R2_ACCESS_KEY_ID=your_access_key_id_here
R2_SECRET_ACCESS_KEY=your_secret_access_key_here
R2_BUCKET_NAME=juewei-assets
R2_REGION=auto

# Optional: R2 Account ID (for some operations)
R2_ACCOUNT_ID=your_account_id_here
